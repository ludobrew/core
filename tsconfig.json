{
  "compilerOptions": {
    "sourceMap": true,
    "incremental": true,
    "pretty": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitUseStrict": true,
    "jsx": "react",
    "baseUrl": "./",
    "lib": [
      "dom",
      "scripthost",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "*.test.ts"
  ]
}
